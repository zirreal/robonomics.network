<Layout 
  title={$tr("Community")}
  ogImage="/website_cover_community.webp"
>
  <section class="community-page">
    <div class="layout">
      <h1 class="community-page__title page-title">
        {$tr("COMMUNITY")}
      </h1>
      
      <p class="community-page__subtitle">
        Share your experience with our hardware
      </p>
      
      <p class="community-page__instructions">
        Post on social media, tag <a href="https://x.com/AIRA_Robonomics" aria-label="go visit our x page" target="_blank">@AIRA Robonomics</a> and <a href="https://x.com/RobonomicsHW" aria-label="go visit our hardware x page" target="_blank">@RobonomicsHW</a>, and use the hashtags <span>#Robonomics</span>, <span>#AltruistAirQuality</span>. We regularly monitor posts using these hashtags.
      </p>
    </div>

    <div class="community-page__gallery-wrapper">
      <TweetGallery tweets={communityTweets} />
    </div>
  </section>
</Layout>

<style>

  h1 {
    margin-top: 0;
    margin-bottom: calc(var(--space) * 0.5);
    text-align: center;
  }

  .community-page {
    padding-top: calc(var(--space) * 2);
    padding-bottom: calc(var(--space) * 2);
  }

  .community-page__title {
    margin-top: 0;
    margin-bottom: calc(var(--space) * 0.5);
    text-align: center;
    font-variation-settings: var(--font-flex-extrabold);
    text-transform: none;
    letter-spacing: 0;
  }

  .community-page__subtitle {
    text-align: center;
    margin-bottom: calc(var(--space) * 0.5);
    font-size: calc(var(--base-font-size) * 1.1);
  }

  .community-page__instructions {
    text-align: center;
    margin-bottom: calc(var(--space) * 2);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .community-page__instructions span {
    color: var(--color-blue)
  }

  .community-page__instructions span,
  .community-page__instructions a {
    font-variation-settings: var(--font-flex-bold);
  }

  .community-page__gallery-wrapper {
    margin-top: 0;
  }

  /* Hide TweetGallery's default title and subtitle */
  .community-page__gallery-wrapper :global(.tweet-gallery__title),
  .community-page__gallery-wrapper :global(.tweet-gallery__subtitle) {
    display: none;
  }

  /* Remove background from TweetGallery */
  .community-page__gallery-wrapper :global(.tweet-gallery) {
    padding-top: 0;
    background-color: transparent;
  }

  /* Reduce margin between tweet items */
  .community-page__gallery-wrapper :global(.tweet-gallery__item) {
    margin-bottom: calc(var(--space) * 0.25);
  }

  @media screen and (max-width: 1200px) {
    .community-page__gallery-wrapper :global(.tweet-gallery__grid) {
      column-count: 3;
    }
  }

  @media screen and (max-width: 990px) {
    .community-page__gallery-wrapper :global(.tweet-gallery__grid) {
      column-count: 2;
    }
  }

  @media screen and (max-width: 640px) {
    .community-page__gallery-wrapper :global(.tweet-gallery__grid) {
      column-count: 1;
    }

    .community-page {
      padding-top: var(--space);
      padding-bottom: var(--space);
    }
  }
</style>
