---
import Layout from '../layouts/Layout.astro';
import RbButton from '../components/RbButton.astro';
import VideoGallery from '../components/blocks/VideoGallery.astro';
import TrustBadges from '../components/blocks/TrustBadges.astro';
import CasesDisplay from '../components/blocks/CasesDisplay.astro';

import { Image } from 'astro:assets';

// images
import BANNER from '../assets/images/for-coworking-and-coliving/banner.webp';

// videos
const videos = [
  '/video/coworking-1.mp4',
  '/video/smart-home-2.mp4',
  '/video/coworking-2.mp4',
  '/video/coworking-3.mp4',
];

const previews = [
  '/video/preview/coworking-preview-1.webp',
  '/video/preview/smart-home-preview-1.webp',
  '/video/preview/coworking-preview-2.webp',
  '/video/preview/coworking-preview-3.webp',
];

---

<Layout 
  title="For co-working and co-living" 
  description={$tr("Robonomics is a decentralized cloud for storing digital twins of robotics and IoT devices. Robonomics enables economic and technical communication between machines and humans. Its decentralized architecture secures the end user's privacy.")}
>

  <div class="layout layout__content page-title"><h1 class="page-title">{$tr('For co-working & co-living')}</h1></div>

  <VideoGallery small videos={videos} preview={previews} alt="For co-working & co-living video example" cls="mb"/>

  <section class="cypherpunk-space">
    <div class="layout text-center">
      <h2 class="title-lined">
        <span>{$tr('CYPHERPUNK SPACE')}</span>
      </h2>
      <h3>{$tr('PRIVACY-FIRST SHARED SPACES')}</h3>
      <p class="description-bold">{$tr('By combining a smart home system with our open hardware, we design and deploy a ready-to-use solution — a true cypherpunk co-living or co-working space.')}</p>
      <p>{$tr('User management through subscriptions, control over access and infrastructure, and configuration of shared devices — from lighting to the coffee machine — all operate as a single autonomous system.')}</p>
      <p>{$tr('You get privacy by default: no corporate clouds, no hidden data collection, and no dependency on external platforms. All data remains under your control and can be independently verified.')}</p>
      <p>{$tr('Thanks to open-source software, the system remains flexible and extensible. You can adapt access logic, user management, lighting, and shared devices to the specific needs of your space — today and in the future.')}</p>
    </div>

    <TrustBadges variant="cowork" />
  </section>

  <section class="section-vivid-green">
    <div class="layout">
      <Image src={BANNER} alt="" aria-hidden="true" />
    </div>
  </section>

  <section class="contact-us">
    <div class="layout layout__content">
      <RbButton 
        href='/contact/' 
        block
        buttoncolor="blue"
        buttonstyle="flat"
        radius
        noTarget={true}
      >
        {$tr('Contact us')}
      </RbButton>

      <h4>{$tr('Solution Examples')}</h4>

      <CasesDisplay 
        items={[
          { type: 'case', id: 3 },
          { type: 'case', id: 19 },
        ]}
        layout="grid"
      />

    </div>
  </section>

</Layout>

<style>

  h1 {
    margin-bottom: calc(var(--space) * 2);
  }

  h2 {
    margin-bottom: calc(var(--space) * 0.5);
  }

  h3 {
    margin: 0 auto;
    margin-top: 0;
    margin-bottom: var(--space);
    font-size: calc(var(--base-font-size) * 1.5);
    color: var(--color-blue)
  }

  h4 {
    font-variation-settings: var(--font-flex-bold);
    font-size: calc(var(--base-font-size) * 1.5);
    text-transform: none;
  }

  p {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  p:last-of-type {
    margin-bottom: calc(var(--space) * 2.2);
  }
  
  section {
    margin-bottom: calc(var(--space) * 2);
  }

  .description-bold {
    font-variation-settings: var(--font-flex-bold);
  }
  
  .section-vivid-green {
    padding-top: var(--space);
  }

  .section-vivid-green div {
    line-height: 0;
  }


</style>