---
import Layout from '../layouts/Layout.astro';
import HomeTrustBadges from '../components/home/HomeTrustBadges.astro';
import HomeEcosystemSwiper from '../components/home/HomeEcosystemSwiper.astro';

---

<Layout 
  title="Robonomics Network" 
  description={$tr("Robonomics is a decentralized cloud for storing digital twins of robotics and IoT devices. Robonomics enables economic and technical communication between machines and humans. Its decentralized architecture secures the end user's privacy.")}
>
  <section class="layout section home">
    <div class="home-hero">
      <div class="home-hero__videos" aria-label="Use cases">
        <div class="home-hero__heading-wrap">
          <h1 class="home-hero__heading">{$tr('OPEN-SOURCE ROBOTICS & IOT ECOSYSTEM')}</h1>
        </div>

        <a class="home-hero__card" href="/devices/" aria-label="For personal usage">
          <video class="home-hero__video" src="/video/home-1.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR PERSONAL USAGE')}</span>
        </a>

        <a class="home-hero__card" href="/devices/" aria-label="For smart homes">
          <video class="home-hero__video" src="/video/home-2.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR SMART HOMES')}</span>
        </a>

        <a class="home-hero__card" href="/cases/" aria-label="For co-working and co-living">
          <video class="home-hero__video" src="/video/home-3.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR CO-WORKING & CO-LIVING')}</span>
        </a>

        <a class="home-hero__card" href="/cases/" aria-label="For business">
          <video class="home-hero__video" src="/video/home-4.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR BUSINESS')}</span>
        </a>
      </div>

      <HomeTrustBadges />
    </div>
  </section>

  <HomeEcosystemSwiper />
</Layout>



<style>
  .home {
    margin-bottom: 0;
    margin-top: 0;
  }

  .home-hero {
    display: flex;
    flex-direction: column;
  }

  .home-hero__videos {
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0;
    overflow: hidden;
  }

  .home-hero__card {
    position: relative;
    display: block;
    text-decoration: none;
    background: #000;
    min-height: 420px;
    pointer-events: none; /* while website is still in a rework mode */
  }

  .home-hero__video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.92);
    transition: filter 0.3s ease-in;
  }

  .home-hero__card:hover .home-hero__video {
    filter: brightness(1.2);
  }

  .home-hero__title {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 1.2rem 1rem;
    color: #fff;
    text-transform: uppercase;
    font-variation-settings: var(--font-flex-bold);
    letter-spacing: 0.06em;
    text-shadow: 0 2px 6px rgba(0,0,0,0.75);
    font-size: 0.85rem;
    white-space: pre-line;
  }

  .home-hero__heading-wrap {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 2;
  }

  .home-hero__heading {
    margin: 0;
    font-size: calc(var(--base-font-size) * 2.5);
    letter-spacing: 0.08em;
    color: var(--color-light);
    text-shadow:
      0 6px 0 rgba(0, 0, 0, 0.85),
      0 14px 18px rgba(0, 0, 0, 0.35);
  }

  @media screen and (max-width: 1024px) {
    .home-hero__videos {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media screen and (max-width: 640px) {
    .home-hero__videos {
      grid-template-columns: 1fr;
    }
    .home-hero__card {
      height: 360px;
    }
  }

  @media screen and (max-width: 420px) {
    .home-hero__heading-wrap {
      inset: unset;
      top: 20px
    }

    .home-hero__heading-wrap h1 {
      font-size: calc(var(--base-font-size) * 1.6);
    }
  }
</style>


