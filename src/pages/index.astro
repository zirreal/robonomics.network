---
import Layout from '../layouts/Layout.astro';
import TrustBadges from '../components/blocks/TrustBadges.astro';
import HomeEcosystemSwiper from '../components/home/HomeEcosystemSwiper.astro';

---

<Layout 
  title="Robonomics Network" 
  description={$tr("Robonomics is a decentralized cloud for storing digital twins of robotics and IoT devices. Robonomics enables economic and technical communication between machines and humans. Its decentralized architecture secures the end user's privacy.")}
>
  <section class="layout section home">
    <div class="home-hero">
      <div class="home-hero__videos" aria-label="Use cases">
        <div class="home-hero__heading-wrap">
          <h1 class="home-hero__heading">{$tr('OPEN-SOURCE ROBOTICS & IOT ECOSYSTEM')}</h1>
        </div>

        <a class="home-hero__card" href="/for-personal-usage/" aria-label="For personal usage">
          <img class="home-hero__preview" src="/video/home-preview-1.webp" alt="" loading="eager"/>
          <video class="home-hero__video" src="/video/home-1.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR PERSONAL USAGE')}</span>
        </a>

        <a class="home-hero__card" href="/for-smart-homes/" aria-label="For smart homes">
          <img class="home-hero__preview" src="/video/home-preview-2.webp" alt="" loading="eager"/>
          <video class="home-hero__video" src="/video/home-2.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR SMART HOMES')}</span>
        </a>

        <a class="home-hero__card" href="/for-coworking-and-coliving/" aria-label="For co-working and co-living">
          <img class="home-hero__preview" src="/video/home-preview-3.webp" alt="" loading="eager"/>
          <video class="home-hero__video" src="/video/home-3.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR CO-WORKING & CO-LIVING')}</span>
        </a>

        <a class="home-hero__card" href="/for-business/" aria-label="For business">
          <img class="home-hero__preview" src="/video/home-preview-4.webp" alt="" loading="eager"/>
          <video class="home-hero__video" src="/video/home-4.mp4" autoplay muted loop playsinline preload="metadata"></video>
          <span class="home-hero__title">{$tr('FOR BUSINESS')}</span>
        </a>
      </div>
    </div>
  </section>

  <div class="trust-badges-wrapper"><TrustBadges/></div>

  <HomeEcosystemSwiper />
</Layout>

<script>
  // Always show preview initially, then transition to video when ready
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('.home-hero__video');
    
    videos.forEach((video) => {
      const preview = video.previousElementSibling;
      
      if (preview && preview.classList.contains('home-hero__preview')) {
        let transitionStarted = false;
        
        const showVideo = () => {
          if (transitionStarted) return;
          transitionStarted = true;
          
          requestAnimationFrame(() => {
            video.classList.add('playing');
            preview.classList.add('hidden');
          });
        };
        
        // Check if video is already ready to play
        if (video.readyState >= 3) { // HAVE_FUTURE_DATA - video is ready
          // Video loaded fast, transition quickly
          setTimeout(showVideo, 50);
        } else {
          // Wait for video to be ready
          video.addEventListener('canplaythrough', showVideo, { once: true });
          video.addEventListener('loadeddata', () => {
            setTimeout(showVideo, 100);
          }, { once: true });
        }
      }
    });
  });
</script>

<style>
  .home {
    margin-bottom: var(--space);
    margin-top: 0;
  }

  .home-hero {
    display: flex;
    flex-direction: column;
  }

  .home-hero__videos {
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0;
    border-radius: 6px;
    overflow: hidden;
  }

  .home-hero__card {
    position: relative;
    display: block;
    text-decoration: none;
    min-height: 816px;
    background-color: transparent;
    overflow: hidden;
  }

  .home-hero__preview {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 1s ease-in-out, filter 0.3s ease-in;
    z-index: 1;
    opacity: 1;
  }

  .home-hero__card:hover .home-hero__preview {
    filter: brightness(1.2);
  }

  .home-hero__card .home-hero__preview.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .home-hero__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.92);
    transition: opacity 1s ease-in-out, filter 0.3s ease-in;
    z-index: 2;
    opacity: 0;
    will-change: opacity;
  }

  .home-hero__card .home-hero__video.playing {
    opacity: 1;
  }

  .home-hero__card:hover .home-hero__video {
    filter: brightness(1.2);
  }

  .home-hero__title {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 1.2rem 1rem;
    color: #fff;
    text-transform: uppercase;
    font-variation-settings: var(--font-flex-bold);
    letter-spacing: 0.06em;
    text-shadow: 0 2px 6px rgba(0,0,0,0.75);
    font-size: 0.85rem;
    white-space: pre-line;
    z-index: 3;
  }

  .home-hero__heading-wrap {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 5;
  }

  .home-hero__heading {
    margin: 0;
    font-size: calc(var(--base-font-size) * 2.5);
    letter-spacing: 0.08em;
    color: var(--color-light);
    text-shadow:
      0 6px 0 rgba(0, 0, 0, 0.85),
      0 14px 18px rgba(0, 0, 0, 0.35);
  }

  .trust-badges-wrapper {
    background-color: var(--rb-color-green-accent);
  }

  @media screen and (max-width: 1024px) {
    .home-hero__videos {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .home-hero__card {
      min-height: 420px;
    }
  }

  @media screen and (max-width: 640px) {
    .home-hero__videos {
      grid-template-columns: 1fr;
    }
    .home-hero__card {
      height: 360px;
    }
  }

  @media screen and (max-width: 420px) {
    .home-hero__heading-wrap {
      inset: unset;
      top: 20px
    }

    .home-hero__heading-wrap h1 {
      font-size: calc(var(--base-font-size) * 1.6);
    }
  }
</style>

